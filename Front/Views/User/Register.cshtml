@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
  <div id="register" class="padding-wrapper">
    <div class="register-input-wrapper">
      <form action="login.php">
        <div id="register_error_info" class="input-error-info"></div>
        <div class="register-wrapper-login">
          <div class="user-list-row padding-label">
            <label>注册角色:</label>
            <div id="role_check" class="field">
              <a id="i" class="link role checked">我要借款</a>
              <a class="link role">我要投资</a>
            </div>
          </div>
          <div class="user-list-row padding-label">
            <label>账    户:</label>
            <div class="field">
              <input id="name" name="name" type="text" placeholder="请输入用户名，仅限字母组合" class="u-text-input name">
            </div>
          </div>
          <div class="user-list-row padding-label">
            <label>密    码:</label>
            <div class="field">
              <input id="password" name="password" type="password" placeholder="请输入用户名，仅限字母组合" class="u-text-input name">
            </div>
          </div>
          <div class="user-list-row padding-label">
            <label>确认密码:</label>
            <div class="field">
              <input id="password2" name="password2" type="password" placeholder="6-16位字符" class="u-text-input name">
            </div>
          </div>
          <div class="user-list-row padding-label">
            <label>手机号码:</label>
            <div class="field">
              <input id="phoneNumber" name="phoneNumber" type="text" placeholder="请输入手机号" class="u-text-input name">
            </div>
          </div>
          <div class="user-list-row padding-label">
            <label>推 荐 码:</label>
            <div class="field">
              <input id="tuiNumber" name="tuiNumber" type="text" class="u-text-input name">
            </div>
          </div>
          <div class="user-list-row padding-label">
            <label>验 证 码:</label>
            <div class="field">
              <input id="codeNumber" name="codeNumber" type="text" class="u-text-input u-text-input-code name">
            </div>
          </div>
          <div class="user-list-row m-tb">
            <input type="checkbox" class="agree-checkbox"><i class="icon icon-checkbox"></i>
            <p class="agree-rules">我已阅读并同意<a href="#" class="link">《信通P2P平台服务条款》</a></p>
          </div>
        </div>
      </form>
      <div class="user-list-row m-tb">
        <input type="submit" value="注册" class="btn-block btn btn-active-style">
      </div>
    </div>
  </div>
</div>

@* 页面的脚本文件 *@
@section scripts{
  <script src="../../Scripts/js/require.js" data-main="../../Scripts/js/user.js"></script>
}
@* 页面的脚本文件 *@